{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 20, "patch": 0 },

  "configurePresets": [
    {
      "name": "linux-ninja-debug",
      "displayName": "Linux Ninja (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "linux-ninja-release",
      "displayName": "Linux Ninja (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "linux-ninja-asan-ubsan",
      "displayName": "Linux Ninja (ASAN+UBSAN)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -g",
        "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined"
      }
    },
    {
      "name": "linux-ninja-tsan",
      "displayName": "Linux Ninja (TSAN)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-fsanitize=thread -fno-omit-frame-pointer -g",
        "CMAKE_C_FLAGS": "-fsanitize=thread -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=thread"
      }
    },
    {
      "name": "linux-ninja-coverage",
      "displayName": "Linux Ninja (Coverage)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build_coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
        "CMAKE_C_FLAGS": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
        "CMAKE_EXE_LINKER_FLAGS": "--coverage"
      }
    },
    {
      "name": "vs2022-debug",
      "displayName": "VS 2022 (x64, Debug)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build_vs",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vs2022-release",
      "displayName": "VS 2022 (x64, Release)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build_vs",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "INCLUDE": "",
        "LIB": "",
        "LIBPATH": "",
        "CPATH": "",
        "PKG_CONFIG_PATH": "",
        "CPLUS_INCLUDE_PATH": "",
        "C_INCLUDE_PATH": ""
      }
    },
    {
      "name": "vs2022-release-ci",
      "displayName": "VS 2022 (x64, Release, CI)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build_ci",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON",
        "CMAKE_MSVC_INCLUDE_EXTERNAL_HEADERS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "INCLUDE": "",
        "LIB": "",
        "LIBPATH": "",
        "CPATH": "",
        "PKG_CONFIG_PATH": "",
        "CPLUS_INCLUDE_PATH": "",
        "C_INCLUDE_PATH": ""
      }
    }
  ],

  "buildPresets": [
    { "name": "linux-ninja-debug", "configurePreset": "linux-ninja-debug" },
    { "name": "linux-ninja-release", "configurePreset": "linux-ninja-release" },
    { "name": "linux-ninja-asan-ubsan", "configurePreset": "linux-ninja-asan-ubsan" },
    { "name": "linux-ninja-tsan", "configurePreset": "linux-ninja-tsan" },
    { "name": "linux-ninja-coverage", "configurePreset": "linux-ninja-coverage" },
    { "name": "vs2022-debug", "configurePreset": "vs2022-debug" },
    { "name": "vs2022-release", "configurePreset": "vs2022-release", "configuration": "Release" },
    { "name": "vs2022-release-ci", "configurePreset": "vs2022-release-ci", "configuration": "Release" }
  ],

  "testPresets": [
    { "name": "linux-ninja-debug", "configurePreset": "linux-ninja-debug", "output": { "outputOnFailure": true } },
    { "name": "linux-ninja-release", "configurePreset": "linux-ninja-release", "output": { "outputOnFailure": true } },
    { "name": "linux-ninja-asan-ubsan", "configurePreset": "linux-ninja-asan-ubsan", "output": { "outputOnFailure": true } },
    { "name": "linux-ninja-tsan", "configurePreset": "linux-ninja-tsan", "output": { "outputOnFailure": true } },
    { "name": "linux-ninja-coverage", "configurePreset": "linux-ninja-coverage", "output": { "outputOnFailure": true } },
    { "name": "vs2022-debug", "configurePreset": "vs2022-debug", "output": { "outputOnFailure": true } },
    { "name": "vs2022-release", "configurePreset": "vs2022-release", "configuration": "Release", "output": { "outputOnFailure": true } },
    { "name": "vs2022-release-ci", "configurePreset": "vs2022-release-ci", "configuration": "Release", "output": { "outputOnFailure": true } }
  ]
}
